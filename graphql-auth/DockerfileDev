FROM node:20 as builder

WORKDIR /src

COPY package.json ./

RUN npm install --production
RUN npm install -g prisma
COPY . .

RUN npm run build

FROM node:20

WORKDIR /src

COPY --from=builder /app/dist ./dist
COPY --from=builder /app/package.json ./

ENV NODE_ENV=production


CMD [ "npm", "start","./graphql-auth"  ]

